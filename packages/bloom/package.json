  "description": "",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tailwindcss -i ./src/input.css -o ./dist/output.css && tsup src/index.tsx --format esm,cjs --dts --external react",
