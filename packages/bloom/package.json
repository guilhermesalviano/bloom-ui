  "devDependencies": {
    "@koaris/eslint-config": "*",
    "@koaris/tokens": "*",
    "@koaris/ts-config": "*",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "@types/react-text-mask": "^5.4.14",
    "concurrently": "^8.2.2",
    "react": "^18.2.0",
    "tailwindcss": "^3.3.6"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-checkbox": "^1.0.4",
