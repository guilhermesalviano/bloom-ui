{
  "name": "@koaris/bloom-ui",
  "version": "1.1.1",
  "description": "Bloom-ui is a public design system from the Koaris Project developed with React, Typescript, and Tailwind.",
  "source": "./src/index.ts",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "style": "./tailwind.css",
  "scripts": {
    "build": "tailwindcss -i ./src/styles/tailwind.css -o ./tailwind.css -c ./tailwind.config.ts --minify && tsup src/index.tsx --format esm,cjs --dts --external react",
    "dev": "concurrently --kill-others \"tailwindcss -i ./src/styles/tailwind.css -o ./tailwind.css -c ./tailwind.config.ts --minify --watch \" \"tsup src/index.tsx --format esm, cjs --dts --external react --watch\"",
    "lint": "eslint src/**/*.ts* --fix"
  },
  "files": [
    "dist",
    "README.md",
    "tailwind.css"
  ],
  "keywords": [
    "design-system",
    "react"
  ],
  "author": "guilhermesalviano",
  "homepage": "https://guilhermesalviano.github.io/bloom-ui",
  "repository": {
    "type": "git",
    "url": "https://github.com/guilhermesalviano/bloom-ui.git"
  },
  "license": "GPL-3.0-only",
  "devDependencies": {
    "@koaris/eslint-config": "*",
    "@koaris/tokens": "*",
    "@koaris/ts-config": "*",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "concurrently": "^8.2.2",
    "autoprefixer": "^10.4.16",
    "tailwind-merge": "^2.1.0",
    "tailwindcss": "^3.3.6",
    "react": "^18.2.0"
  },
  "dependencies": {
    "react-icons": "^4.12.0"
  }
}
